<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fresh Market</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body {
        background-color: #fff;
        color: #000;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    /* NAVBAR */
    nav.navbar {
        background-color: #000 !important;
    }

    nav .navbar-brand,
    nav .nav-link {
        color: #fff !important;
        font-weight: bold;
    }

    nav .nav-link:hover {
        background-color: #fff;
        color: #000 !important;
        border-radius: 5px;
    }

    /* HERO SECTION */
    .hero {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        padding: 60px 10%;
        gap: 20px;
        flex-wrap: wrap;
    }

    .hero-left h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        line-height: 1.2;
        font-weight: bold;
    }

    .hero-left h3 {
        font-weight: normal;
        color: #000;
        margin-bottom: 10px;
    }

    .hero-left p {
        font-size: 1.2rem;
    }

    .hero-right img {
        max-width: 450px;
        width: 100%;
        border-radius: 10px;
    }

    /* Responsive */
    @media(max-width: 768px) {
        .hero { text-align: center; flex-direction: column; }
        .hero-right img { margin-top: 30px; }
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container-fluid">
          <a class="navbar-brand" href="#">Fresh Market</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
              <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                      <a class="nav-link" href="/register">Register</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="/login">Login</a>
                  </li>
              </ul>
          </div>
      </div>
  </nav>

  <!-- HERO SECTION -->
  <section class="hero">
      <div class="hero-left">
          <h1>Fresh Market</h1>
          <h3>Daily Grown ingredients</h3>
          <p>Bringing Freshness to Your Door step</p>
      </div>
      <div class="hero-right">
          <img class="hero-image" src="\images\mainfruit.png" alt="Fresh ingredients">
      </div>
  </section>
</body>
</html>
