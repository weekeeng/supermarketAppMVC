<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fresh Market - Shopping</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

  <!-- INTERNAL CSS -->
  <style>
    body {
      background-color: #fff; /* white */
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      color: #000;
    }

    /* NAVBAR */
    nav.navbar {
      background-color: #000 !important; /* black */
    }

    nav .navbar-brand {
      font-family: 'Pacifico', cursive;
      font-size: 1.8rem;
      color: #fff !important;
    }

    nav .nav-link {
      color: #fff !important;
      font-weight: bold;
    }

    nav .nav-link:hover {
      background-color: #fff; /* white */
      color: #000 !important;
      border-radius: 5px;
    }

    /* Hero Section */
    .hero {
      text-align: center;
      margin: 30px 0;
    }

    .hero h2 {
      color: #000; /* black */
      margin-bottom: 20px;
    }

    /* Controls */
    .controls {
      margin-bottom: 30px;
    }

    /* Product Card */
    .card {
      border-radius: 15px;
      box-shadow: 0 0 10px rgba(0,0,0,0.08);
      height: 100%;
      background-color: #fff;
    }

    .card-body {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      min-height: 250px; /* ensures uniform height */
      color: #000;
    }

    .card .price {
      font-weight: bold;
      color: #000; /* black */
      font-size: 1.1rem;
    }

    .card .category {
      color: #000; /* black */
      font-size: 0.9rem;
    }

    .card img {
      height: 200px;
      object-fit: cover;
      border-top-left-radius: 15px;
      border-top-right-radius: 15px;
    }

    /* View Product button */
    .btn-view {
      background-color: #000; /* black */
      color: #fff;
      border: none;
    }

    .btn-view:hover {
      background-color: #fff; /* white */
      color: #000;
      border: 1px solid #000;
    }

    .add-to-cart-btn {
      background-color: #000; /* black */
      color: #fff;
      border: none;
    }

    .add-to-cart-btn:hover {
      background-color: #fff; /* white */
      color: #000;
      border: 1px solid #000;
    }

    @media(max-width: 768px) {
      .controls .col-md-4,
      .controls .col-md-3 {
        margin-bottom: 10px;
      }
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container-fluid">
          <a class="navbar-brand" href="#">Fresh Market</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
              <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                      <a class="nav-link" href="/cart">View Cart</a>
                  </li> 
                  <li class="nav-item">
                      <a class="nav-link" href="/logout">Logout</a>
                  </li> 
              </ul>
          </div>
      </div>
  </nav>

  <!-- Hero -->
  <div class="hero">
    <h2>Welcome to Fresh
       Market</h2>
  </div>

  <!-- Controls -->
  <div class="container controls">
    <div class="row align-items-center">
      <div class="col-md-4 mb-2">
        <input type="text" id="searchInput" class="form-control" placeholder="Search products...">
      </div>
      <div class="col-md-3 mb-2">
        <select id="categorySelect" class="form-select">
          <option value="all">All Categories</option>
          <% let categories = [...new Set(products.map(p => p.category))]; %>
          <% categories.forEach(cat => { %>
            <option value="<%= cat %>"><%= cat %></option>
          <% }); %>
        </select>
      </div>
      <div class="col-md-3 mb-2">
        <select id="sortSelect" class="form-select">
          <option value="name-asc">Name A-Z</option>
          <option value="name-desc">Name Z-A</option>
          <option value="price-asc">Price Low to High</option>
          <option value="price-desc">Price High to Low</option>
        </select>
      </div>
    </div>
  </div>

  <!-- Products -->
  <div class="container">
    <div class="row" id="productContainer">
      <% products.forEach(product => { %>
        <div class="col-md-3 mb-4 product-card">
          <div class="card h-100">
            <img src="images/<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= product.productName %></h5>
              <p class="category"><%= product.category || "Uncategorized" %></p>
              <p class="price">$<%= product.price.toFixed(2) %></p>
              <a href="/product/<%= product.id %>" class="btn btn-view mb-2 w-100">View Product</a>
              <div class="input-group mt-auto">
                <input type="number" min="1" value="1" class="form-control quantity-input" id="quantity-<%= product.id %>">
                <form action="/add-to-cart/<%= product.id %>" method="POST">
                  <input type="hidden" name="quantity" id="form-quantity-<%= product.id %>" value="1">
                  <button type="submit" class="btn add-to-cart-btn" onclick="document.getElementById('form-quantity-<%= product.id %>').value = document.getElementById('quantity-<%= product.id %>').value;">Add to Cart</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- JS for search, filter, sort -->
  <script>
    const searchInput = document.getElementById('searchInput');
    const categorySelect = document.getElementById('categorySelect');
    const sortSelect = document.getElementById('sortSelect');
    const productContainer = document.getElementById('productContainer');
    const productCards = Array.from(document.querySelectorAll('.product-card'));

    function filterAndSort() {
      const search = searchInput.value.toLowerCase();
      const category = categorySelect.value;
      const sort = sortSelect.value;

      let filtered = productCards.filter(card => {
        const name = card.querySelector('.card-title').textContent.toLowerCase();
        const cat = card.querySelector('.category').textContent;
        return name.includes(search) && (category === 'all' || cat === category);
      });

      filtered.sort((a, b) => {
        if(sort === 'name-asc') {
          return a.querySelector('.card-title').textContent.localeCompare(b.querySelector('.card-title').textContent);
        } else if(sort === 'name-desc') {
          return b.querySelector('.card-title').textContent.localeCompare(a.querySelector('.card-title').textContent);
        } else if(sort === 'price-asc') {
          return parseFloat(a.querySelector('.price').textContent.replace('$','')) - parseFloat(b.querySelector('.price').textContent.replace('$',''));
        } else if(sort === 'price-desc') {
          return parseFloat(b.querySelector('.price').textContent.replace('$','')) - parseFloat(a.querySelector('.price').textContent.replace('$',''));
        }
        return 0;
      });

      productContainer.innerHTML = '';
      filtered.forEach(card => productContainer.appendChild(card));
    }

    searchInput.addEventListener('input', filterAndSort);
    categorySelect.addEventListener('change', filterAndSort);
    sortSelect.addEventListener('change', filterAndSort);
  </script>
</body>
</html>



