<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shopping Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    body {
      background-color: #f5f5f5;
      font-family: Arial, sans-serif;
    }

    .navbar {
      background-color: #000000 !important;
    }
    .navbar .nav-link {
      color: white !important;
      font-weight: bold;
    }
    .navbar .nav-link:hover {
      background-color: #cccccc;
      color: black !important;
      border-radius: 5px;
    }

    .cart-table img {
      max-width: 100px;
      height: auto;
    }

    .btn-delete {
      background-color: transparent;
      border: none;
      color: #333333; 
      font-size: 1.2rem;
    }

    .btn-delete:hover {
      color: #000000;
    }

    .order-summary {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 10px;
      margin-top: 30px;
      border: 1px solid #cccccc;
    }

    .order-summary h4 {
      color: #000000;
      margin-bottom: 15px;
    }

    .btn-orange {
      background-color: #000000;
      border: none;
      color: white;
      font-weight: bold;
    }

    .btn-orange:hover {
      background-color: #333333;
      color: white;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Fresh Market</a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/shopping">Continue Shopping</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered cart-table align-middle text-center mt-3">
        <thead>
          <tr>
            <th>Product</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% let subtotal = 0; %>
          <% cart.forEach(item => { %>
            <tr>
              <td>
                <img src="/images/<%= item.image %>" alt="<%= item.productName %>" class="img-thumbnail mb-2"><br>
                <strong><%= item.productName %></strong>
              </td>
              <td><%= item.category %></td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td>
                <form action="/update-cart/<%= item.id %>" method="POST">
                  <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control" onchange="this.form.submit()">
                </form>
              </td>
              <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
              <td>
                <form action="/remove-from-cart/<%= item.id %>" method="POST">
                  <button type="submit" class="btn-delete"><i class="bi bi-trash-fill"></i></button>
                </form>
              </td>
            </tr>
            <% subtotal += item.price * item.quantity; %>
          <% }) %>
        </tbody>
      </table>

      <div class="order-summary">
        <h4>Order Summary</h4>
        <p>Subtotal (<%= cart.length %> items): $<%= subtotal.toFixed(2) %></p>
        <p>Tax (8%): $<%= (subtotal * 0.08).toFixed(2) %></p>
        <p><strong>Total: $<%= (subtotal * 1.08).toFixed(2) %></strong></p>

        <div class="d-flex justify-content-between mt-4">
          <a href="/shopping" class="btn btn-warning">Continue Shopping</a>
          <a href="/checkout" class="btn btn-orange">Proceed to Checkout</a>
        </div>

        <ul class="mt-3">
          <li>✓ Free delivery on orders over $100</li>
          <li>✓ Easy returns within 7 days</li>
        </ul>
      </div>
    <% } %>
  </div>
</body>
</html>

