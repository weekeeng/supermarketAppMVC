<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Shopping Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
  body {
    background-color: #F5F2EA; /* soft beige */
    font-family: "Poppins", sans-serif;
    color: #3B3B3B; /* charcoal text */
  }

  /* NAVBAR */
  .navbar {
    background-color: #434ee6 !important; /* blue */
  }

  .navbar .nav-link {
    color: #fff !important;
    font-weight: 600;
  }

  .navbar .nav-link:hover {
    background-color: #a82200; /* red */
    color: #fff !important;
    border-radius: 5px;
  }

  /* CART TABLE */
  .cart-table {
    background-color: #FFFFFF; /* white card */
    border-radius: 18px;
    border: 1px solid #E8E3D9;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .cart-table img {
    max-width: 100px;
    height: auto;
    border-radius: 10px;
    border: 1px solid #CFC9BD;
  }

  /* DELETE BUTTON */
  .btn-delete {
    background-color: transparent;
    border: none;
    color: #3B3B3B;
    font-size: 1.2rem;
    transition: 0.3s ease;
  }

  .btn-delete:hover {
    color: #434ee6; /* blue */
  }

  /* ORDER SUMMARY */
  .order-summary {
    background-color: #FFFFFF; /* white card */
    padding: 20px;
    border-radius: 18px;
    margin-top: 30px;
    border: 1px solid #E8E3D9;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .order-summary h4 {
    color: #3B3B3B;
    margin-bottom: 15px;
  }

  /* BUTTONS */
  .btn-orange, .btn-checkout {
    background-color: #434ee6; /* blue */
    border: none;
    color: #fff;
    font-weight: 600;
    border-radius: 10px;
    transition: 0.3s ease;
  }

  .btn-orange:hover, .btn-checkout:hover {
    background-color: #A77E58; /* clay brown hover */
    color: #fff;
  }
</style>

</head>

<body>
  <nav class="navbar navbar-expand-sm navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Fresh Market</a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item"><a class="nav-link" href="/shopping">Continue Shopping</a></li>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2>Cart</h2>

    <% if (!cart || cart.length === 0) { %>
      <p>Your cart is empty.</p>
    <% } else { %>
      <table class="table table-bordered cart-table align-middle text-center mt-3">
        <thead>
          <tr>
            <th>Product</th>
            <th>Category</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% let subtotal = 0; %>
          <% cart.forEach(item => { %>
            <tr>
              <td>
                <img src="/images/<%= item.image %>" alt="<%= item.productName %>" class="img-thumbnail mb-2"><br>
                <strong><%= item.productName %></strong>
              </td>
              <td><%= item.category %></td>
              <td>$<%= item.price.toFixed(2) %></td>
              <td>
                <form action="/update-cart/<%= item.id %>" method="POST">
                  <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control" onchange="this.form.submit()">
                </form>
              </td>
              <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
              <td>
                <form action="/remove-from-cart/<%= item.id %>" method="POST">
                  <button type="submit" class="btn-delete"><i class="bi bi-trash-fill"></i></button>
                </form>
              </td>
            </tr>
            <% subtotal += item.price * item.quantity; %>
          <% }) %>
        </tbody>
      </table>

      <div class="order-summary">
        <h4>Order Summary</h4>
        <p>Subtotal (<%= cart.length %> items): $<%= subtotal.toFixed(2) %></p>
        <p>Tax (8%): $<%= (subtotal * 0.08).toFixed(2) %></p>
        <p><strong>Total: $<%= (subtotal * 1.08).toFixed(2) %></strong></p>

        <div class="d-flex justify-content-between mt-4">
          <a href="/shopping" class="btn btn-warning">Continue Shopping</a>
          <a href="/checkout" class="btn btn-orange">Proceed to Checkout</a>
        </div>

        <ul class="mt-3">
          <li>✓ Free delivery on orders over $100</li>
          <li>✓ Easy returns within 7 days</li>
        </ul>
      </div>
    <% } %>
  </div>
</body>
</html>

