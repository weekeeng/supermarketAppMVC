<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>

  <style>
    .product-img {
      width: 70px;
      height: 70px;
      object-fit: cover;
      border-radius: 10px;
      border: 1px solid #ddd;
    }
    .header-title {
      font-weight: 700;
    }
    .table thead th {
      background-color: #343a40;
      color: white;
      font-size: 14px;
      letter-spacing: 0.5px;
    }
    .table td {
      vertical-align: middle;
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/addProduct">Add Product</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- MAIN CONTAINER -->
  <div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">
      <h3 class="header-title">Inventory Management</h3>
      <div>
        <span class="badge bg-success p-2">Logged in as: <%= user.username %> (<%= user.role %>)</span>
      </div>
    </div>

    <div class="card shadow-lg">
      <div class="card-body">

        <table class="table table-hover table-bordered text-center align-middle">
          <thead>
            <tr>
              <th>Product Name</th>
              <th>Image</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>

          <tbody>
            <% products.forEach(product => { %>
              <tr>
                <td>
                  <a href="/product/<%= product.id %>" class="fw-semibold text-decoration-none">
                    <%= product.productName %>
                  </a>
                </td>

                <td>
                  <img src="/images/<%= product.image %>" class="product-img">
                </td>

                <td><%= product.quantity %></td>
                <td class="fw-bold">$<%= product.price.toFixed(2) %></td>

                <td>
                  <a href="/updateProduct/<%= product.id %>" class="btn btn-warning btn-sm px-3">
                    Edit
                  </a>
                </td>

                <td>
                  <form action="/deleteProduct/<%= product.id %>" method="POST" onsubmit="return confirm('Are you sure?')">
                    <button type="submit" class="btn btn-danger btn-sm px-3">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

      </div>
    </div>

  </div>
</body>

</html>
