<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NETS QR Payment - The Fresh Market</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <script src="https://unpkg.com/event-source-polyfill"></script>

  <style>
    body { background-color:#FFFBEA; font-family: Arial, sans-serif; margin:0; }

    .nets-wrap { min-height:100vh; display:flex; align-items:center; justify-content:center; padding:24px; }
    .nets-card { background:#fff; border:1px solid #eee; border-radius:16px; box-shadow:0 4px 10px rgba(0,0,0,0.05); padding:24px; width:100%; max-width:420px; text-align:center; }
    .nets-title { font-size:26px; color:#2E8B57; font-weight:800; margin:4px 0; }
    .nets-sub { font-size:13px; color:#7a7a7a; margin-bottom:12px; }

    .qr-box { border:2px dashed #FFA500; border-radius:14px; display:flex; justify-content:center; align-items:center; min-height:260px; margin:10px 0 14px; background:#fffaf0; }
    .qr-box img { max-width:260px; width:100%; height:auto; }

    .timer-label { font-size:12px; color:#6b6b6b; }
    .timer-value { font-size:20px; font-weight:800; color:#2E8B57; margin-bottom:8px; }
    .timer-bar { height:8px; border-radius:999px; background:#eee; overflow:hidden; margin-bottom:14px; }
    .timer-progress { height:100%; background:#FFA500; width:100%; }

    .hb-btn { padding:10px 16px; background:#FFA500; color:white; border:none; border-radius:20px; font-weight:700; display:inline-flex; align-items:center; gap:6px; justify-content:center; cursor:pointer; text-decoration:none; }
    .hb-btn:hover{ filter:brightness(0.97); }
    .hb-btn-outline { background:white; color:#FFA500; border:1px solid #FFA500; }
  </style>
</head>
<body>
  <main class="nets-wrap">
    <div class="nets-card">
      <div class="nets-title">Scan to Pay</div>
      <div class="nets-sub">NETS QR</div>

      <div class="qr-box">
        <img src="<%= qrCodeUrl %>" alt="NETS QR Code">
      </div>

      <div class="timer-label">Time remaining</div>
      <div id="timeRemaining" class="timer-value">1:00</div>
      <div class="timer-bar">
        <div id="timeProgress" class="timer-progress"></div>
      </div>

      <a href="<%= backUrl %>" class="hb-btn hb-btn-outline"><i class="bi bi-arrow-left"></i> <%= backLabel %></a>
    </div>
  </main>

<script>
(() => {
  const txnRef = "<%= txnRetrievalRef %>";
  const countdown = 120; //  2 minute
  let remaining = countdown;
  const timerEl = document.getElementById('timeRemaining');
  const barEl = document.getElementById('timeProgress');

  // Timer
  const timerInterval = setInterval(() => {
    remaining--;
    if (remaining < 0) {
      clearInterval(timerInterval);
      timerEl.textContent = "Expired";
      window.location.href = '/nets-qr/fail?txn_retrieval_ref=' + txnRef;
      return;
    }
    const m = Math.floor(remaining / 60);
    const s = remaining % 60;
    timerEl.textContent = `${m}:${s.toString().padStart(2,'0')}`;
    barEl.style.width = (remaining/countdown*100) + '%';
  }, 1000);


  const headers = {
    "api-key": "<%= apiKey %>",
    "project-id": "<%= projectId %>"
  };

  const sse = new EventSourcePolyfill(`/sse/payment-status/${txnRef}`, { headers });

  sse.addEventListener('message', async (ev) => {
    const data = JSON.parse(ev.data || '{}');
    console.log('NETS SSE:', data);

    if (data.success) {
      sse.close();
      window.location.href = '/nets-qr/success?txn_retrieval_ref=' + txnRef;
    } else if (data.fail) {
      sse.close();
      window.location.href = '/nets-qr/fail?txn_retrieval_ref=' + txnRef;
    }
  });

})();
</script>

</body>
</html>

