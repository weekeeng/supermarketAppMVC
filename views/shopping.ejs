<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fresh Market - Shopping</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- NEUTRAL THEME CSS -->
  <style>
    body {
      background-color: #f4f4f4;
      font-family: "Segoe UI", Arial, sans-serif;
      color: #333;
    }

    /* NAVBAR */
    nav.navbar {
      background-color: #333 !important;
    }

    nav .navbar-brand {
      font-size: 1.7rem;
      font-weight: 600;
      color: #fff !important;
    }

    nav .nav-link {
      color: #fff !important;
    }
    nav .nav-link:hover {
      background-color: #fff;
      color: #333 !important;
      border-radius: 6px;
      padding-left: 10px;
      padding-right: 10px;
    }

    /* HERO */
    .hero {
      text-align: center;
      margin: 35px 0;
    }
    .hero h2 {
      color: #222;
      font-weight: 600;
    }

    /* PRODUCT CARD */
    .card {
      background: #fff;
      border-radius: 14px;
      border: 1px solid #ddd;
      box-shadow: 0 2px 6px rgba(0,0,0,0.08);
      height: 100%;
    }

    .card img {
      height: 200px;
      object-fit: cover;
      border-top-left-radius: 14px;
      border-top-right-radius: 14px;
    }

    .card-body {
      color: #333;
      display: flex;
      flex-direction: column;
    }

    .price {
      font-weight: 600;
      font-size: 1.1rem;
    }

    .category {
      font-size: 0.9rem;
      color: #666;
    }

    /* BUTTONS */
    .btn-view, .add-to-cart-btn {
      background-color: #065acf;
      color: #fff;
      border-radius: 8px;
      border: none;
      transition: 0.2s ease;
    }

    .btn-view:hover, .add-to-cart-btn:hover {
      background-color: #fff;
      color: #333;
      border: 1px solid #333;
    }

    /* FILTERS */
    .controls select, .controls input {
      border-radius: 8px;
      border: 1px solid #ccc;
    }
  </style>

</head>
<body>

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container-fluid">
          <a class="navbar-brand" href="#">Fresh Market</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
              <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                      <a class="nav-link" href="/cart">View Cart</a>
                  </li> 
                  <li class="nav-item">
                      <a class="nav-link" href="/logout">Logout</a>
                  </li> 
              </ul>
          </div>
      </div>
  </nav>

  <!-- HERO -->
  <div class="hero">
    <h2>Welcome to Fresh Market</h2>
  </div>

  <!-- FILTER SECTION -->
  <div class="container controls mb-4">
    <div class="row g-2">
      <div class="col-md-4">
        <input type="text" id="searchInput" class="form-control" placeholder="Search products...">
      </div>
      <div class="col-md-3">
        <select id="categorySelect" class="form-select">
          <option value="all">All Categories</option>
          <% let categories = [...new Set(products.map(p => p.category))]; %>
          <% categories.forEach(cat => { %>
            <option value="<%= cat %>"><%= cat %></option>
          <% }); %>
        </select>
      </div>
      <div class="col-md-3">
        <select id="sortSelect" class="form-select">
          <option value="name-asc">Name A-Z</option>
          <option value="name-desc">Name Z-A</option>
          <option value="price-asc">Price Low to High</option>
          <option value="price-desc">Price High to Low</option>
        </select>
      </div>
    </div>
  </div>

  <!-- PRODUCT LIST -->
  <div class="container">
    <div class="row" id="productContainer">
      <% products.forEach(product => { %>
        <div class="col-md-3 mb-4 product-card">
          <div class="card">
            <img src="images/<%= product.image %>" alt="<%= product.productName %>">

            <div class="card-body">
              <h5 class="card-title"><%= product.productName %></h5>
              <p class="category"><%= product.category || "Uncategorized" %></p>
              <p class="price">$<%= product.price.toFixed(2) %></p>

              <a href="/product/<%= product.id %>" class="btn btn-view mb-2">View Product</a>

              <div class="input-group mt-auto">
                <input type="number" min="1" value="1" class="form-control quantity-input" id="quantity-<%= product.id %>">

                <form action="/add-to-cart/<%= product.id %>" method="POST">
                  <input type="hidden" name="quantity" id="form-quantity-<%= product.id %>" value="1">
                  <button type="submit" class="btn add-to-cart-btn"
                    onclick="document.getElementById('form-quantity-<%= product.id %>').value = document.getElementById('quantity-<%= product.id %>').value;">
                    Add to Cart
                  </button>
                </form>

              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- JS FILTERING -->
  <script>
    const searchInput = document.getElementById('searchInput');
    const categorySelect = document.getElementById('categorySelect');
    const sortSelect = document.getElementById('sortSelect');
    const productContainer = document.getElementById('productContainer');
    const productCards = Array.from(document.querySelectorAll('.product-card'));

    function filterAndSort() {
      const search = searchInput.value.toLowerCase();
      const category = categorySelect.value;
      const sort = sortSelect.value;

      let filtered = productCards.filter(card => {
        const name = card.querySelector('.card-title').textContent.toLowerCase();
        const cat = card.querySelector('.category').textContent;
        return name.includes(search) && (category === 'all' || cat === category);
      });

      filtered.sort((a, b) => {
        if(sort === 'name-asc') return a.querySelector('.card-title').textContent.localeCompare(b.querySelector('.card-title').textContent);
        if(sort === 'name-desc') return b.querySelector('.card-title').textContent.localeCompare(a.querySelector('.card-title').textContent);
        if(sort === 'price-asc') return parseFloat(a.querySelector('.price').textContent.replace('$','')) - parseFloat(b.querySelector('.price').textContent.replace('$',''));
        if(sort === 'price-desc') return parseFloat(b.querySelector('.price').textContent.replace('$','')) - parseFloat(a.querySelector('.price').textContent.replace('$',''));
        return 0;
      });

      productContainer.innerHTML = '';
      filtered.forEach(card => productContainer.appendChild(card));
    }

    searchInput.addEventListener('input', filterAndSort);
    categorySelect.addEventListener('change', filterAndSort);
    sortSelect.addEventListener('change', filterAndSort);
  </script>

</body>
</html>
